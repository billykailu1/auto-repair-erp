generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Change to "mysql" or "sqlite" if needed
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  email     String @unique
  password  String
  role      String // "admin", "mechanic", "front_desk"

  appointments Appointment[]
}

model Appointment {
  id              Int    @id @default(autoincrement())
  customerName    String
  customerPhone   String
  vehicleModel    String
  appointmentDate DateTime
  status          String // "scheduled", "completed", "canceled"

  mechanicId      Int?
  mechanic        User?  @relation(fields: [mechanicId], references: [id])
}


model Inventory {
  id          Int    @id @default(autoincrement())
  partName    String
  partNumber  String @unique
  quantity    Int
  reorderLevel Int
  lastUpdated DateTime @default(now())
  partType    String // Now required field to categorize parts
}

model Alert {
  id           Int    @id @default(autoincrement())
  message      String
  type         String // "low_inventory", "upcoming_appointment"
  createdAt    DateTime @default(now())
}
